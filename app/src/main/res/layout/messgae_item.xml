<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_size"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_user_message"
        android:layout_width="wrap_content"
        android:layout_marginStart="100dp"
        android:background="@drawable/back_user_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chat_user_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Привет я Влад, как дела?"
            android:textColor="@color/white"
            android:gravity="end"
            android:textSize="@dimen/min_size"
            android:padding="@dimen/v_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/chat_user_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="21:45"
            android:textColor="@color/white"
            android:gravity="end"
            style="@style/s_small_text"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_user_message"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_reciver_message"
        android:layout_width="wrap_content"
        android:layout_marginEnd="100dp"
        android:background="@drawable/back_receiving_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chat_reciver_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Привет Влад, у меня хорошо"
            android:textColor="@color/white"
            android:gravity="end"
            android:textSize="@dimen/min_size"
            android:padding="@dimen/v_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/chat_reciver_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="21:45"
            android:textColor="@color/white"
            android:gravity="end"
            style="@style/s_small_text"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chat_reciver_message"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>