<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_size"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_reciver_image"
        android:layout_width="@dimen/chat_image_w"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/chat_image_h">

        <ImageView
            android:id="@+id/chat_reciver_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/chat_reciver_image_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="21:45"
            android:textColor="@color/white"
            android:gravity="end"
            style="@style/s_small_text"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/chat_reciver_image"

            android:shadowRadius="5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowColor="@color/black"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/block_user_image"
        android:layout_width="@dimen/chat_image_w"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/chat_image_h">

        <ImageView
            android:id="@+id/chat_user_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/chat_user_image_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="21:45"
            android:textColor="@color/white"
            android:gravity="end"
            style="@style/s_small_text"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/chat_user_image"

            android:shadowRadius="5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowColor="@color/black"


            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>